
<div class="tag-container">
    <header class="mb-5">
        <h3>Crear nuevo Tag</h3>
    </header>
    <form method="post" class="tag-form">
        <div class="form-group">
            <input type="text" name="nombre" placeholder="Nombre" default="NombreTag" class="form-input" />
        </div>
        <div class="form-group">
            <label>Color: </label>
            <input type="color" name="color" class="form-input" style="height:50px; width:50px;" />
        </div>
        <button class="btn mt-5">Crear Tag</button>
        @ViewData["MENSAJE"]
   </form>
</div>

<style>
    .tag-container {
        margin-top: 100px;
        text-align: center;
        padding: 2rem;
        border-radius: 10px;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
        max-width: 400px;
        width: 100%;
        background: #2c2c2c;
    }



    .tag-form {
        display: flex;
        flex-direction: column;
        gap: 1rem;
    }

    .form-group {
        text-align: left;
    }


    .form-input {
        width: 100%;
        padding: 0.5rem;
        border: none;
        border-bottom: 2px solid #FC5B04;
        background: transparent;
        font-size: 1rem;
        outline: none;
        transition: border-color 0.3s ease;
        color: white;
    }

        .form-input:focus {
            border-bottom-color: orange;
            color: white;
        }

    .btn {
        padding: 0.75rem;
        border: 2px solid #FC5B04;
        background: transparent;
        color: #FC5B04;
        font-size: 1rem;
        cursor: pointer;
        border-radius: 5px;
        transition: background 0.3s ease, color 0.3s ease;
    }

        .btn:hover {
            background: #FC5B04;
            border: 2px solid orange;
            color: white;
        }


    #link:hover {
        color: orange !important;
    }

</style>
