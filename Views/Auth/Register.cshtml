<div class="register-container">
    <img src="~/images/default/logo_blanco.png" alt="Logo" class="logo" />
    <form method="post" class="register-form mb-3">
        <div class="form-group">
            <input type="email" id="email" name="email" class="form-input" placeholder="Email" />
        </div>
        <div class="form-group">
            <input type="text" id="name" name="name" class="form-input" placeholder="Nombre" />
        </div>
        <div class="form-group">
            <input type="password" id="pwd" name="pwd" class="form-input" placeholder="Contraseña" />
        </div>
        <small style="color:#FC5B04;">@ViewData["MENSAJE"]</small>
        <button type="submit" class="btn">Registrarse</button>
    </form>
    <small>
        <a asp-action="Login" style="text-decoration:none; color:#FC5B04" id="link">¿Ya tienes cuenta? Inicia sesión</a>
    </small>
</div>


<style>

    .register-container {
        margin-top: 100px;
        text-align: center;
        padding: 2rem;
        border-radius: 10px;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
        max-width: 400px;
        width: 100%;
        background: #2c2c2c;
    }

    .logo {
        width: 150px;
        margin-bottom: 3rem;
    }

    .register-form {
        display: flex;
        flex-direction: column;
        gap: 1rem;
    }

    .form-group {
        text-align: left;
    }

    .form-input {
        width: 100%;
        padding: 0.5rem;
        border: none;
        border-bottom: 2px solid #FC5B04; 
        background: transparent;
        font-size: 1rem;
        outline: none;
        transition: border-color 0.3s ease;
        color: white; 
    }

    .form-input:focus {
        border-bottom-color: orange; 
    }

    .btn {
        padding: 0.75rem;
        border: 2px solid #FC5B04; 
        background: transparent;
        color: #FC5B04;
        font-size: 1rem;
        cursor: pointer;
        border-radius: 5px;
        transition: background 0.3s ease, color 0.3s ease;
    }

    .btn:hover {
        background: #FC5B04; 
        color: white;
    }

    #link:hover{
        color: orange !important;
    }

</style>