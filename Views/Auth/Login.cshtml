<div class="login-container">
    <img src="~/images/default/logo_blanco.png" alt="Logo" class="logo"/>
    <form method="post" class="login-form mb-4">
        <div class="form-group">
            <input type="text" id="email" name="email" class="form-input" placeholder="Email"/>
        </div>
        <div class="form-group">
            <input type="password" id="pwd" name="pwd" class="form-input" placeholder="Contraseña"/>
        </div>
        <small style="color:#FC5B04;">@ViewData["MENSAJE"]</small>
        <button type="submit" class="btn">¡A levantar hierros!</button>
    </form>
    <small>
        <a asp-action="Register" style="text-decoration:none; color:#FC5B04" id="link">Date de alta en IronGrip</a>
    </small>
</div>


