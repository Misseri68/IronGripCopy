@model List<PartialEjercicioModel>

<div style="height: 500px; overflow-y: auto;">
    <div class="list-group list-group-checkable d-grid gap-2 border-0">
        <input class="list-group-item-check newEjercicio" type="radio" name="listGroupCheckableRadios" id="newEjercicio" value="newEjercicio">
        <label class="list-group-item rounded-3 py-3" for="newEjercicio" value="newEjercicio">
            ➕ Realizar ejercicio
            <span class="d-block small opacity-50">Elige o crea un nuevo ejercicio, ¡y a darle duro!</span>
        </label>

        @if (Model != null)
        {
            @foreach (PartialEjercicioModel ej in Model)
            {
                <input class="list-group-item-check pe-none" type="radio" name="listGroupCheckableRadios" id="listGroupCheckableRadios3(@ej.EjercicioHecho.Id)" value="">
                <label class="list-group-item rounded-3 py-3" for="listGroupCheckableRadios3(@ej.EjercicioHecho.Id)">
                    @ej.Ejercicio.Nombre
                    <span class="d-block small opacity-50">nºSeries: @ej.NumTotalSeries() , Media de Kg: @ej.MediaKilos(), nºRepeticiones: @ej.NumTotalRepes()</span>
                </label>
            }
        }
    </div>
</div>



<style>
<!--Estilos de bootstrap para las cards -->
    .list-group {
        width: 100%;
        max-width: 460px;
        margin-inline: 1.5rem;
    }

    .form-check-input:checked + .form-checked-content {
        opacity: .5;
    }

    .form-check-input-placeholder {
        border-style: dashed;
    }

    [contenteditable]:focus {
        outline: 0;
    }

    .list-group-checkable .list-group-item {
        cursor: pointer;
    }

    .list-group-item-check {
        position: absolute;
        clip: rect(0, 0, 0, 0);
    }

        .list-group-item-check:hover + .list-group-item {
            background-color: var(--bs-secondary-bg);
        }

        .list-group-item-check:checked + .list-group-item {
            color: #fff;
            background-color: var(--bs-primary);
            border-color: var(--bs-primary);
        }

        .list-group-item-check[disabled] + .list-group-item,
        .list-group-item-check:disabled + .list-group-item {
            filter: none;
            opacity: .5;
        }

    .list-group-radio .list-group-item {
        cursor: pointer;
        border-radius: .5rem;
    }

    .list-group-radio .form-check-input {
        z-index: 2;
        margin-top: -.5em;
    }

    .list-group-radio .list-group-item:hover,
    .list-group-radio .list-group-item:focus {
        background-color: var(--bs-secondary-bg);
    }

    .list-group-radio .form-check-input:checked + .list-group-item {
        background-color: var(--bs-body);
        border-color: var(--bs-primary);
        box-shadow: 0 0 0 2px var(--bs-primary);
    }

    .list-group-radio .form-check-input[disabled] + .list-group-item,
    .list-group-radio .form-check-input:disabled + .list-group-item {
        filter: none;
        opacity: .5;
    }
    </style>
