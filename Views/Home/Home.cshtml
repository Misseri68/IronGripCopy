@model Usuario
<h3 class="text-center"> ¡Al ataque, @Model.Nombre!</h3>
<div class="main-container">
    <div class="cards-section">
        <div class="card">
            <div class="card-body">
                Estadísticas
            </div>
        </div>
        <div class="card">
            <div class="card-body">
                <button class="btn btn-danger">Entrenamientos</button>
                <button class="btn btn-danger"><a asp-controller="Ejercicios" asp-action="Index">Ejercicios</a></button>
                <button class="btn btn-danger"><a asp-action="Index" asp-controller="Tags">Tags</a></button>
            </div>
        </div>
    </div>
    
</div>

<div class="fixed-bottom-button">
    <button class="btn-entrenar"><a asp-controller="Entrenamientos" asp-action="Create" style="text-decoration:none; color:white;">Nuevo entrenamiento</a></button>
</div>

<style>
    h3 {
        text-align: center;
        margin-bottom: 20px;
    }

    .main-container {
        width: 100%;
        display: flex;
        justify-content: center;
        padding: 0 15px;
    }

    .cards-section {
        display: flex;
        justify-content: center;
        flex-wrap: wrap;
        gap: 20px;
        width: 100%;
        max-width: 1200px;
    }

    .card {
        background: #2c2c2c;
        flex: 1;
        min-width: 300px;
        max-width: 500px;
        margin: 10px;
        border-radius: 10px;
    }

    .card-body {
        padding: 20px;
        color: white;
        display: flex;
        flex-wrap: wrap;
        justify-content: center;
        gap: 10px;
    }

    .fixed-bottom-button {
        width: 100%;
        text-align: center;
        margin-bottom:10px;
    }

    .btn-entrenar {
        background: #FC5B04;
        padding: 10px 20px;
        border-radius: 10px;
        color: white;
        border: none;
        font-weight: bold;
    }

    .btn-entrenar:hover {
        background-color: orange;
    }

    .btn {
        padding: 0.75rem;
        border: 2px solid #FC5B04;
        background: transparent;
        color: #FC5B04;
        font-size: 1rem;
        cursor: pointer;
        border-radius: 5px;
        transition: background 0.3s ease, color 0.3s ease;
        margin: 5px;
    }

    .btn:hover {
        background: #FC5B04;
        color: white;
    }

    .btn a {
        text-decoration: none;
        color: inherit;
    }
</style>